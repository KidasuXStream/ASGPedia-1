<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    android:orientation="vertical"
    android:gravity="center_vertical">
    <TextView
        style="@style/tv_form"
        android:textStyle="bold"/>
    <TextView
        style="@style/tv_form"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        app:srcCompat="@drawable/add" />
    <TextView
        style="@style/tv_form"
        android:textStyle="bold"/>
    <TextView
        style="@style/tv_form"
        android:textStyle="bold"/>
    <TextView
        style="@style/tv_form"
        android:text="Nama"/>
    <EditText
        android:id="@+id/et_add_name"
        style="@style/edit_form"
        android:hint="Masukkan Nama"/>
    <TextView
        style="@style/tv_form"
        android:text="Brand"/>
    <EditText
        android:id="@+id/et_add_brand"
        style="@style/edit_form"
        android:hint="Masukkan Brand"/>
    <TextView
        style="@style/tv_form"
        android:text="Jenis"/>
    <EditText
        android:id="@+id/et_add_jenis"
        style="@style/edit_form"
        android:hint="Masukkan Jenis"/>
    <TextView
        style="@style/tv_form"
        android:text="Bahan"/>
    <EditText
        android:id="@+id/et_add_bahan"
        style="@style/edit_form"
        android:hint="Masukkan Bahan"/>
    <TextView
        style="@style/tv_form"
        android:text="FPS"/>
    <EditText
        android:id="@+id/et_add_fps"
        style="@style/edit_form"
        android:hint="Masukkan FPS"/>
    <TextView
        style="@style/tv_form"
        android:text="Nama"/>
    <EditText
        android:id="@+id/et_add_harga"
        style="@style/edit_form"
        android:hint="Masukkan Harga"/>
    <TextView
        style="@style/tv_form"
        android:textStyle="bold"/>
    <TextView
        style="@style/tv_form"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_add_submit"
            android:text="Submit"
            style="@style/btn_form"/>
        <Button
            android:id="@+id/btn_add_cancel"
            android:text="Cancel"
            style="@style/btn_form"/>
    </LinearLayout>
    <TextView
    style="@style/tv_form"
    android:textStyle="bold"/>
    <TextView
        style="@style/tv_form"
        android:textStyle="bold"/>

</LinearLayout>
</ScrollView>
